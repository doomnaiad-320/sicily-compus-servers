<t-navbar title="登录" />
<view class="page login">
  <view class="login__header">
    <image class="login__logo" src="/assets/logo.png" mode="aspectFit" />
    <view class="login__title">校园服务平台</view>
    <view class="login__subtitle">便捷校园生活，从这里开始</view>
  </view>

  <view class="login__content">
    <view class="login__button">
      <t-button
        theme="primary"
        size="large"
        block
        icon="logo-wechat-stroke"
        loading="{{isLoading}}"
        bindtap="wxLogin"
      >
        微信一键登录
      </t-button>
    </view>

    <view class="login__agreement">
      <t-radio-group allow-uncheck borderless value="{{isCheck ? 'agree' : ''}}" bind:change="onCheckChange">
        <t-radio
          label=""
          value="agree"
          t-class="radio-class"
          t-class-icon="radio-class-icon"
        />
      </t-radio-group>
      <text class="agreement-text">
        我已阅读并同意
        <text class="link">《用户服务协议》</text>
        和
        <text class="link">《隐私政策》</text>
      </text>
    </view>
  </view>

  <view class="login__footer">
    <text class="footer-text">登录即表示您同意我们的服务条款</text>
  </view>
</view>
